<%- include('layout/header') %>
<div class="container" style="margin-bottom: 90px">
  <div class="card">
    <!-- header -->
    <header>
      <nav class="nav">
        <a class="nav-link active nav-brand" href="/products"><i class="fas fa-cart-arrow-down"></i> Electronic<span class="fw-normal">_Store</span> </a>
        <a class="btn-add ms-auto me-5" href="/products"><< Back</a>
      </nav>
    </header>
    <!-- form -->
    <!-- success -->
    <div class="container-messages">
      <!-- success -->
      <% if (messages.successadd) { %>
      <div class="alert alert-danger" role="alert"><%- messages.successadd %></div>
      <% } %>
      <!-- error -->
      <% if (messages.error) { %>
      <div class="alert alert-danger" role="alert"><%- messages.error %></div>
      <% } %>
    </div>
    <form class="mt-5" action="/products/save" method="post">
      <div class="mb-3">
        <label for="name" class="form-label">Name Products : </label>
        <input type="text" class="form-control" id="name" placeholder="input your product" autocomplete="off" name="name" />
      </div>
      <div class="mb-3">
        <label for="stock" class="form-label">Stock Products : </label>
        <input type="number" class="form-control" id="stock" placeholder="input product stock" autocomplete="off" name="quantity" />
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Price : </label>
        <input type="text" class="form-control" id="rupiah" placeholder="input product stock" autocomplete="off" name="price" />
      </div>
      <div class="mb-3">
        <label for="images" class="form-label">Images : </label>
        <input type="file" class="form-control" id="images" name="images" />
      </div>
      <button type="submit" class="btn btnAdd">Add Products</button>
    </form>
  </div>
</div>
<%- include('layout/footer') %>
