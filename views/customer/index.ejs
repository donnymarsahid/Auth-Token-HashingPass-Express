<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" referrerpolicy="no-referrer" />
    <title>Electronic | Store</title>
    <!-- Mys Style -->
    <link rel="stylesheet" href="stylesheets/style.css" />
  </head>
  <body>
    <div class="container">
      <!-- Header  -->
      <header>
        <nav class="nav">
          <a class="nav-link active nav-brand" href="/products"><i class="fas fa-cart-arrow-down"></i> Electronic<span class="fw-normal">_Store</span> </a>
          <button class="btn btn-login ms-auto me-3"><a href="/login">Login</a></button>
        </nav>
      </header>
      <div class="card">
        <!-- success -->
        <!-- success -->
        <% if (messages.successadd) { %>
        <div class="alert alert-danger" role="alert"><%- messages.successadd %></div>
        <% } %> <% if (messages.success) { %>
        <div class="alert alert-danger" role="alert"><%- messages.success %></div>
        <% } %>
        <!-- Products -->
        <div class="row products">
          <% if (!data.length) { %>
          <div class="row alerts">
            <div class="col-md text-center">
              <div class="alert alert-warning" role="alert">product not found !</div>
            </div>
          </div>
          <% } %> <% data.forEach(data => { %>
          <div class="col-md-4">
            <div class="card" style="width: 18rem">
              <img src="images/<%= data.images %> " class="card-img-top" height="250px" />
              <div class="card-body">
                <h5 class="card-title fw-bold"><%= data.name %></h5>
                <p>Rp. <%= data.price %></p>
                <p class="text-muted">Stock : <%= data.quantity %></p>
              </div>
              <a href="/buy/<%= data.id_products %>" class="btn btn-product fw-bold">Buy</a>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
    <script src="javascripts/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </body>
</html>
